generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Job {
  id        String   @id @default(uuid())
  title     String   @unique
  appliedAt DateTime @default(now())
  status    String   @default("APPLIED")
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model User {
  id          String  @id @default(uuid())
  firebaseUid String  @unique
  email       String  @unique
  username    String
  avatarUrl   String?
  apiCredits  Int     @default(10)
  jobs        Job[]
}

enum JobStatus {
  APPLIED
  REJECTED
  INTERVIEW
}

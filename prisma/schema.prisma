generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}
  
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  APPLIED
  REJECTED
  INTERVIEW
}

model Job {
  id String @id @default(uuid())
  title String
  appliedAt DateTime @default(now())
  status  JobStatus @default(APPLIED) 
}

generator client {
  provider = "prisma-client-js"
  output   = "./lib/generated/prisma/client"
}
  
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobStatus {
  APPLIED
  REJECTED
  INTERVIEW
}

model Job {
  id String @id @default(uuid())
  title String
  appliedAt DateTime @default(now())
  status  String @default("APPLIED")
}
